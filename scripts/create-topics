#!/bin/bash

docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic raw-output                                           --partitions 12 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic raw-input                                            --partitions 12 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic raw-by-hash-repartition                              --partitions 12 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic streams-raw-by-hash-repartition                      --partitions 12 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic streams-raw-unique-store-changelog                   --partitions 12 --replication-factor 2

docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic nyc-taxi-dashboard-fare                               --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic nyc-taxi-dashboard-tips                               --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic nyc-taxi-dashboard-passengers                         --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic nyc-taxi-trips                                        --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic nyc-taxi-trips-by-pu-location-id-repartition          --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic nyc-taxi-trips-by-do-location-id-repartition          --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic trips-per-hour                                        --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic trips-per-hour-repartition                            --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic streams-nyc-taxi-stats-store-changelog                --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic streams-nyc-taxi-trips-by-pu-location-id-repartition  --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic streams-nyc-taxi-trips-by-do-location-id-repartition  --partitions 32 --replication-factor 2
docker exec kafka-0 kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic streams-trips-per-hour-repartition                    --partitions 32 --replication-factor 2