#!/bin/bash

docker exec kafka-0 /kafka/bin/kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic train.moviment      --partitions 4 --replication-factor 1
docker exec kafka-0 /kafka/bin/kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic train.event-summary --partitions 4 --replication-factor 1
docker exec kafka-0 /kafka/bin/kafka-topics.sh --bootstrap-server localhost:9092 --create --if-not-exists --topic load-balancing-0-train-speed-store-changelog  --partitions 4 --replication-factor 1